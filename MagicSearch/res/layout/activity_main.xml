<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <LinearLayout
	    android:id="@+id/linearLayoutOutput"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
        <EditText
	        android:id="@+id/main_edit"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/main_edit_hint" />
        
        <Button
	        android:id="@+id/main_button_search"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/main_button_search" />
        
        <Button
	        android:id="@+id/main_button_showall"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/main_button_showall" />
        
        <Button
	        android:id="@+id/main_button_webscraping"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/main_button_webscraping" />
        
	</LinearLayout>
</ScrollView>